<%= form_with(model: @user, local: true, data: { turbo: false }) do |form| %>
  <% if @user && @user.errors.any? %>
    <% @user.errors.full_messages.each do |message| %>
      <p class="alert alert-danger"><%= message %></p>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control border-primary", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control border-primary", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :phone %>
    <%= form.text_field :phone, class: "form-control border-primary", required: true %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-primary btn-sm mt-2"%>
  </div>
<% end %>
